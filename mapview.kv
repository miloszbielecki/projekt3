Form:
<Form>:
	search_lat: coor_lat
	search_long: coor_long
	wynik2: wynik
	koniec:koniec2
	my_map: map
	my_image: image
	orientation: "vertical"
	BoxLayout:
		orientation: "horizontal"
		MapView:
			size_hint_x: 100
			lat: 0
			long: 0 
			zoom: 1
			id: map
			on_map_relocated: root.draw_marker()
		Image:
			size_hint_x: 100
			source: 'marker.png'
			id: image
	BoxLayout:
		height: "40dp"
		size_hint_y: None
		Label:
			size_hint_x: 25
			text: "Lat"
		Label:
			size_hint_x: 25
			id: coor_lat
		Label:
			size_hint_x: 25
			text: "Long"
		Label:
			size_hint_x: 25
			id: coor_long
	BoxLayout:
		height: "40dp"
		size_hint_y: None
		Label:
			size_hint_x: 25
			text: "Score"
        Label:
			size_hint_x: 25
			id: wynik
		Label:
			size_hint_x: 25
			id: koniec2
		Button:
			size_hint_x: 25
			text: "Start"
			on_press: root.falszywa()
		Button:
			size_hint_x: 25
			text: "Nastepny"
			on_press: root.check_points()	
		Button:
			size_hint_x: 25
			text: "Jeszcze raz"
			on_press:root.falszywa()	
		Button:
			size_hint_x: 25
            id: btnExit
            text: "Wyjscie"
            on_press: app.stop()
             			